<div class="container">
  <div class="center_it">
    <h2>Sign up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.collection_select :role, User::ROLES[0,2], :to_s, :humanize, {include_blank: "Choose a profile"} %>
        <p>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Name", autofocus: true %>
          </div>
        </p>
          <div class="form-group">
            <%= f.email_field :email, placeholder: "Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :city, placeholder: "City" %>
          </div>
          <div class="form-group">
            <%= f.text_field :state, placeholder: "State" %>
          </div>
          <%= f.select :location_id, Location.all.collect { |loc| [loc.name, loc.id] }, {include_blank: "Choose a location"} %>
          <div class="actions"> 
            <%= f.submit "Sign up" %>
          </div>
      <% end %>
      <%= render "devise/shared/links" %>
  </div>
</div>